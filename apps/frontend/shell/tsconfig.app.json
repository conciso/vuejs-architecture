{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    // Include all frontend modules here.
    "../core/src/**/*",
    "../core/src/**/*.vue",
    "../luggage/src/**/*",
    "../luggage/src/**/*.vue",
    "../rooms/src/**/*",
    "../rooms/src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "../",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
